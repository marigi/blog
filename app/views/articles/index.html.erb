<div class="bg-white shadow overflow-hidden sm:rounded-lg">
<div class="px-4 py-5 border-b border-gray-200 sm:px-6">
<h1>Listing Articles</h1>
 
<%= link_to 'New article', new_article_path %>

<table class="min-w-full divide-y divide-gray-200">
  <tr>
    <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Title</th>
    <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Text</th>
    <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider"></th>
  </tr>
 
  <% @article.each do |article| %>
    <tr>
      <td class="px-6 py-4 whitespace-no-wrap"><%= article.title %></td>
      <td class="px-6 py-4 whitespace-no-wrap"><%= article.text %></td>
      <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium"><%= link_to 'Show', article_path(article), class: "text-indigo-600 hover:text-indigo-900" %></td>
      <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium"><%= link_to 'Edit', edit_article_path(article), class: "text-indigo-600 hover:text-indigo-900" %></td>
      <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium"><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?', class: "text-indigo-600 hover:text-indigo-900" } %></td>
    </tr>
  <% end %>
</table>
</div>
</div>